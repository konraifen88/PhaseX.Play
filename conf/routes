# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Securesocial
GET        /                                              @controllers.Application.index
GET        /userAware                                     @controllers.Application.userAware
GET        /only-twitter                                  @controllers.Application.onlyTwitter
GET        /link-result                                   @controllers.Application.linkResult
GET        /current-user                                  @controllers.Application.currentUser

# Applicaton
GET        /home                                          controllers.Assets.at(path="/public/html",file="homepage.scala.html")
#GET        /ngApp/*roomName                               @controllers.Chat.createGame(roomName: String)

GET        /json/update                                   @controllers.Chat.getJsonUpdate()
GET        /json/drawHidden                               @controllers.Chat.getDrawHidden()
GET        /json/drawDiscard                              @controllers.Chat.getDrawOpen()
GET        /json/discard/:index                           @controllers.Chat.discard(index: Int)
GET        /json/playPhase/*cards                         @controllers.Chat.playPhase(cards: String)
GET        /json/addToPhase/*cardIndex/*stackIndex        @controllers.Chat.addToPhase(cardIndex: Int,stackIndex: Int)


GET        /chat/:roomName                                @controllers.Application.goToChatRoom(roomName: String)



GET        /assets/javascripts/chatroom.js                @controllers.Chat.chatRoomJs(username, roomName)

# Test for Chat
GET        /chat                                          @controllers.Chat.chatIndex()
GET        /room                                          @controllers.Chat.chatRoomString(username: String ?= null, roomName: String ?=null)
GET        /room/:roomName/chat                           @controllers.Chat.chat(username, roomName: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                                  controllers.Assets.versioned(path="/public", file: Asset)
->         /auth                                          securesocial.Routes
