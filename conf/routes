# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Securesocial
GET        /                                              @controllers.Application.index
GET        /userAware                                     @controllers.Application.userAware
GET        /only-twitter                                  @controllers.Application.onlyTwitter
GET        /link-result                                   @controllers.Application.linkResult
GET        /current-user                                  @controllers.Application.currentUser

# Applicaton
GET        /home                                          controllers.Assets.at(path="/public/html",file="homepage.scala.html")
GET        /lobby                                         @controllers.Application.getLobby
GET        /start                                         controllers.WUIController.start()
GET        /restart                                       controllers.WUIController.restart()
GET        /ngApp                                         controllers.WUIController.ngApp()
GET        /play/*command                                 controllers.WUIController.play(command: String)

GET        /json/update                                   controllers.WUIController.getJsonUpdate()
GET        /json/drawHidden                               controllers.WUIController.getDrawHidden()
GET        /json/drawDiscard                              controllers.WUIController.getDrawOpen()
GET        /json/discard/:index                           controllers.WUIController.discard(index: Int)
GET        /json/playPhase/*cards                         controllers.WUIController.playPhase(cards: String)
GET        /json/addToPhase/*cardIndex/*stackIndex        controllers.WUIController.addToPhase(cardIndex: Int,stackIndex: Int)

GET        /lobby/update                                  @controllers.Application.getLobbyUpdate
GET        /lobby/addGame                                 @controllers.Application.addGame
GET        /lobby/joinGame/*gameNumber                    @controllers.Application.joinGame(gameNumber: Int)
GET        /lobby/startGame/*gameNumber                   @controllers.Application.startGame(gameNumber: Int)
GET        /lobby/socket                                  @controllers.Application.getLobbySocket

# GET        /socket                                        controllers.WUIController.getSocket()

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                                  controllers.Assets.versioned(path="/public", file: Asset)
->         /auth                                          securesocial.Routes

# Test for Chat
GET        /chat                                          @controllers.Chat.chatIndex()
GET        /room                                          @controllers.Chat.chatRoom(username: String ?= null, roomName: String ?=null)
GET        /room/:roomName/chat                           @controllers.Chat.chat(username, roomName: String)
GET        /assets/javascripts/chatroom.js                @controllers.Chat.chatRoomJs(username, roomName)

